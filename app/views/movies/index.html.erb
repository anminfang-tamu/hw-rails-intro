<h2>All Movies</h2>

<%#  Part 2: Start here... %>



<form accept-charset="UTF-8" action="/movies">
  <input name="utf8" type="hidden" value="&#x2713;" />
  
  <label for="rating">G</label>
  <input type="checkbox" id="rating_g" name="rating[]" value="G" class="btn btn-primary"/>
  <label for="rating">PG</label>
  <input type="checkbox" id="rating_pg" name="rating[]" value="PG" class="btn btn-primary"/>
  <label for="rating">PG-13</label>
  <input type="checkbox" id="rating_pg_13" name="rating[]" value="PG-13" class="btn btn-primary"/>
  <label for="rating">R</label>
  <input type="checkbox" id="rating_r" name="rating[]" value="R" class="btn btn-primary"/>
  <label for="rating">NC-17</label>
  <input type="checkbox" id="rating_nc_17" name="rating[]" value="NC-17" class="btn btn-primary"/>
  
  <input name="commit" type="submit" value="Search" class="btn btn-primary"/>
</form>

<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <th id="title" class=<%= @css_title %>><%= link_to "Movie Title", :sort => "title" %></th>
      <th>Rating</th>
      <th id="release_date" class=<%= @css_release_date %>><%= link_to "Release Date", :sort => "release_date" %></th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= movie.title %>
        </td>
        <td>
          <%= movie.rating %>
        </td>
        <td>
          <%= movie.release_date %>
        </td>
        <td>
          <%= link_to "More about #{movie.title}", movie_path(movie) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary' %>